<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:cardCornerRadius="@dimen/dim_20_dp"
    android:layout_margin="@dimen/dim_8_dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivGameHome"
            android:layout_width="match_parent"

            android:layout_height="110dp"/>
        <TextView
            android:id="@+id/textGameHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textTitle"
            android:layout_marginStart="@dimen/dim_10_dp"
            android:textSize="@dimen/dim_10_pt"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/textYearGameHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dim_10_pt"
            android:layout_marginStart="@dimen/dim_10_dp"
            android:layout_marginBottom="@dimen/dim_10_dp"
            android:textColor="@color/textSubTitle"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView >